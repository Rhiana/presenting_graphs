<p id="notice"><%= notice %></p>
<section class="page">
  <article class="page__content">
    <header class="page__header">
      <h1>Bar Graphs</h1>
      <p><strong>
        Here are some basic SVG bar graphs where it's filling in a percentage

      </strong></p>
    </header>
    <nav class="page__preview">

    <% @bar_graphs.each do |bar_graph| %>
      <%= link_to edit_bar_graph_path(bar_graph), class: "preview_link" do %>
        <div class="bar_graph">
          <%= render "bar_graph_svg",
                    total: bar_graph.total,
                    score: bar_graph.score
          %>
        </div>
        <span>Update</span>
      <% end %>
    <% end %>
    </nav>
    <div class="page__cta">
      <%= link_to 'New Bar Graph', new_bar_graph_path, class: "button purple" %>
      <%= link_to 'Other Graphs', root_path, class: "button pink" %>
    </div>
  </article>
</section>
