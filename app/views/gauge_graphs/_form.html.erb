<%= form_with(model: gauge_graph, local: true) do |form| %>
  <% if gauge_graph.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gauge_graph.errors.count, "error") %> prohibited this gauge_graph from being saved:</h2>

      <ul>
      <% gauge_graph.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score,
          placeholder: "Enter a score",
          autofocus: true,
          aria: { "described-by": "score-error" } %>
    <p class="error" id="score-error">
      <%= gauge_graph.errors[:score].first %>
    </p>
  </div>

  <div class="field">
    <%= form.label :total %>
    <%= form.number_field :total,
          placeholder: "Enter a total",
          aria: { "described-by": "total-error" } %>
    <p class="error" id="total-error">
      <%= gauge_graph.errors[:total].first %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit class: "button purple" %>
  </div>
<% end %>
