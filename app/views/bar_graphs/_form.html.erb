<%= form_with(model: bar_graph, local: true) do |form| %>
  <% if bar_graph.errors.any? %>
    <div id="error_explanation" role="alert">
      <h2><%= pluralize(bar_graph.errors.count, "error") %> prohibited this bar_graph from being saved:</h2>

      <ul>
      <% bar_graph.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :scores %>
    <%= form.text_field :scores,
          placeholder: "x, y",
          autofocus: true,
          aria: { "described-by": "scores-error" } %>
    <p class="error" id="scores-error">
      <%= bar_graph.errors[:scores].first %>
    </p>
  </div>

  <div class="field">
    <%= form.label :maximum %>
    <%= form.number_field :maximum,
          placeholder: "Enter the max score",
          aria: { "described-by": "maximum-error" } %>
    <p class="error" id="maximum-error">
      <%= bar_graph.errors[:maximum].first %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit class: "button purple" %>
  </div>
<% end %>
