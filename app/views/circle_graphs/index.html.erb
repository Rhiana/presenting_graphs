<% content_for :title, " - All circle graphs" %>

<% if notice %>
  <p id="notice" role="alert"><%= notice %></p>
<% end %>

<section class="page">
  <article class="page__content">
    <header class="page__header">
      <h1>Circle Graphs</h1>
      <p><strong>
        Here are some basic SVG circle graphs where it's filling in a percentage

      </strong></p>
    </header>
    <nav class="page__preview">
    <% @circle_graphs.each do |circle_graph| %>
      <%= link_to edit_circle_graph_path(circle_graph), class: "preview_link" do %>
        <div class="circle_graph">
          <%= CirclePresenter.new(self, circle_graph.score, circle_graph.total, 180).render %>
        </div>
        <span>Update</span>
      <% end %>
    <% end %>
    </nav>
    <div class="page__cta">
      <%= link_to 'New Circle Graph', new_circle_graph_path, class: "button purple" %>
      <%= link_to 'Other Graphs', root_path, class: "button pink" %>
    </div>

    <%= render "shared/code_snippet", graph: "circle" %>
  </article>
</section>
