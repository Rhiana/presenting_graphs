<section class="page">
  <article class="page__content">
    <header class="page__header">
      <h1>Editing Pie Graph</h1>
    </header>

    <div class="page__form">
      <div class="pie_graph">
        <%= PiePresenter.new(self, @pie_graph.score1_was, @pie_graph.score2_was, @pie_graph.score3_was, 180).render %>
      </div>
      <%= render 'form', pie_graph: @pie_graph %>
    </div>

    <nav class="page__cta">
      <%= link_to 'Back', pie_graphs_path, class: "button pink" %>
      <%= link_to 'Destroy', @pie_graph, class: "button blue", method: :delete, data: { confirm: 'Are you sure?' } %>
    </nav>
  </article>
</section>
